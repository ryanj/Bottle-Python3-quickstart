#!/usr/bin/env python

import os, pymongo, bottle

application = bottle.Bottle()
app = application

@app.route('/')
@app.route('/hello')
@app.route('/hello/<name>')
def greet(name='Stranger'):
    return bottle.template('Hello {{name}}, how are you?', name=name)

