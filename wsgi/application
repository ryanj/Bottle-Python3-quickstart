#!/usr/bin/env python

import os, pymongo, bottle

application = bottle.Bottle()

@application.route('/')
@application.route('/hello')
@application.route('/hello/<name>')
def greet(name='Stranger'):
    return application.template('Hello {{name}}, how are you?', name=name)

